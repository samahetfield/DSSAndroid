<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/medicamentos_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@mipmap/medicamentos_foreground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="#635E5D"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="#FFF"
            android:text="Medicamentos"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/farmacias_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@mipmap/farmacias_foreground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="#635E5D"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="#FFF"
            android:text="Farmacias"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mapa_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@mipmap/mapas_foreground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="#635E5D"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="#FFF"
            android:text="Mapas"/>
    </LinearLayout>




</LinearLayout>